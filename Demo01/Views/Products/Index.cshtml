@model IEnumerable<Demo.EfCore.Standard.Models.Product>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Number</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductNumber</td>
                <td>@product.Name</td>
                <td>@product.ListPrice</td>
                <td><img src="data:image/gif;base64,@(Convert.ToBase64String(@product.ThumbNailPhoto))" /></td>
            </tr>
        }
    </tbody>
</table> 